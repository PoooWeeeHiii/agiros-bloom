# AGIROS distribution and OS settings for packaging
ROS_DISTRO=loong          
OS_NAME=openeuler         
OS_VERSION=24            
DEBIAN_OS_NAME=ubuntu     
DEBIAN_OS_VERSION=jammy   

# AGIROS rosdep (agirosdep) index and sources for dependency resolution
AGIROSDEP_INDEX_URL=http://1.94.193.239/yumrepo/agiros/agirosdep/index-v4.yaml       
AGIROSDEP_SOURCE=http://1.94.193.239/yumrepo/agiros/agirosdep/sources.list.d/base.yaml  

# Project paths for agiros-bloom tool and workspace
BLOOM_ROOT=/opt/agiros/loong/tools/agiros-bloom   
AGIROS_WORKSPACE=/opt/agiros/loong/src           

# Bloom output directory configuration
BLOOM_GENERATE_OUTPUT_DIR=rpm  

# Git configuration for bloom (use project-specific git settings)
GIT_CONFIG_HOME=${BLOOM_ROOT}/.gitconfig   # Use a local Git config (at agiros-bloom/.gitconfig) for bloom's git operations

# Locale setting for consistent build behavior
LANG=C.UTF-8   


